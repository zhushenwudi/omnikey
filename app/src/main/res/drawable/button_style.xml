<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="160dp" android:height="41dp" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#ff000000" />
            <gradient android:angle="180" android:endColor="#ff217ae2" android:startColor="#ff1f5dea" android:type="linear" android:useLevel="true" />
            <corners android:radius="40dp"  />
        </shape>
    </item>

    <item android:width="160dp" android:height="41dp" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#ff000000" />
            <gradient android:angle="180" android:endColor="#ff509cf5" android:startColor="#ff3471fb" android:type="linear" android:useLevel="true" />
            <corners android:radius="40dp" />
        </shape>
    </item>
</selector>